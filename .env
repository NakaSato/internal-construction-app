# =============================================================================
# Flutter Architecture App - Centralized Configuration
# All app configuration is managed through this .env file
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Current API Environment (development, production, local)
API_ENVIRONMENT=local

# Main API Base URL - Change this to switch environments
API_BASE_URL=http://localhost:5001

# Environment-specific URLs for easy switching
API_BASE_URL_PRODUCTION=https://api-icms.gridtokenx.com
API_BASE_URL_DEVELOPMENT=http://localhost:5001
API_BASE_URL_LOCAL=http://localhost:5001

# API Timeouts (in milliseconds)
API_CONNECT_TIMEOUT=30000
API_RECEIVE_TIMEOUT=30000
API_SEND_TIMEOUT=30000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# Main WebSocket URL - Change this to switch environments
WEBSOCKET_URL=ws://localhost:5001/notificationHub

# Environment-specific WebSocket URLs for easy switching
WEBSOCKET_URL_PRODUCTION=wss://api-icms.gridtokenx.com/notificationHub
WEBSOCKET_URL_DEVELOPMENT=ws://localhost:5001/notificationHub
WEBSOCKET_URL_LOCAL=ws://localhost:5001/notificationHub

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT Token Settings
JWT_EXPIRY_BUFFER_MINUTES=5
AUTH_TOKEN_REFRESH_ENABLED=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug Settings
DEBUG_MODE=true
LOG_LEVEL=debug
ENABLE_API_LOGGING=true
ENABLE_NETWORK_LOGGING=true

# Feature Flags
ENABLE_MOCK_DATA=false
ENABLE_OFFLINE_MODE=false
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Theme Settings
DEFAULT_THEME=light
ENABLE_DARK_MODE=true
ENABLE_SYSTEM_THEME=true

# Animation Settings
ENABLE_ANIMATIONS=true
ANIMATION_DURATION_MS=300

# =============================================================================
# DOCUMENTATION & RESOURCES
# =============================================================================

# API Documentation
SWAGGER_URL=http://localhost:5001/swagger/v1/swagger.json
API_DOCS_URL=https://api-icms.gridtokenx.com/

# Support URLs
SUPPORT_EMAIL=support@gridtokenx.com
TERMS_URL=https://gridtokenx.com/terms
PRIVACY_URL=https://gridtokenx.com/privacy
